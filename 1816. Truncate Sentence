string truncateSentence(string s, int k) {
        
        string ans="";
        int i=0;

        while(k!=0 && i<s.length())
        {
            if(s[i]==' ')
            {
                k--;
                if(k!=0)
                {
                    ans+=s[i];
                }
            }
            else
            {
                ans+=s[i];
            }
            i++;
        }

        return ans;
    }
